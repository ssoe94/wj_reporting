# Django 설정
SECRET_KEY=your-secret-key-here
DEBUG=False
ENVIRONMENT=production

# 데이터베이스
DATABASE_URL=postgresql://user:password@localhost:5432/dbname
INTERNAL_DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS 설정
CORS_ALLOW_ALL=False
FRONTEND_URL=https://your-frontend-domain.com
ADDITIONAL_ALLOWED_HOST=

# Render 설정
RENDER_EXTERNAL_HOSTNAME=your-backend-domain.onrender.com

# MES API 설정
MES_API_BASE=https://your-mes-api-base-url
MES_ACCESS_TOKEN=your-mes-access-token

# Redis/Celery 설정
